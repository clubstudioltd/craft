{% set data = {
    type: 'text',
    id: null,
    name: null,
    value: null,
    classes: ['border px-2 py-1.5'],
    additionalClasses: [],
    attributes: [],
}|merge(_context, true) %}

{% tag 'input' with {
    id: data.id,
    type: data.type,
    name: data.name,
    value: data.value,
    class: data.classes|merge(data.additionalClasses)|join(' ')
}|merge(data.attributes) %}
{% endtag %}
